<!DOCTYPE html>
<html>
<head>
  <title>ImageCraze</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= flash[:alert] %>
<%= flash[:notice] %>
  <div id="container">
    <div id="user_header">
      <% if current_user %>
        <p><%= current_user.name %><br>
        Logged in as <%= current_user.email %><br>
        <%= link_to "Log Out", session_path("current"), method: "delete" %></p>
      <% else %>
      <%= link_to "Sign Up", new_user_path %> or
      <%= link_to "Log In", new_session_path %>
      <% end %>
    </div>
  </div>

<%= yield %>

</body>
</html>
