<!DOCTYPE html>
<html>
<head>
  <title>ImageCraze</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<%= flash[:alert] %>
<%= flash[:notice] %>
<% if current_user %>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">ImageCraze</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", root_url %> </a></li>
        <li class="active"><%= link_to "Upload Photos", new_photo_path %> </a></li>
    </div>
      </ul>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
            <p><%= current_user.name %> <%= link_to "Log Out", session_path("current"), method: "delete" %></p>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<% end %>

<%= yield %>

</body>
</html>
